<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/autoreply"
        android:layout_gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="32sp"
        android:padding="10dp"
        android:layout_marginTop="20dp" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/text"
        android:layout_margin="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/autoreply_function"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:padding="16dp"
        android:textSize="20sp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Automatically respond to messages"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:id="@+id/chkbx1"
        android:textSize="18sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/message"
        android:hint="@string/message" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="@string/next"
            android:layout_alignParentBottom="true"
            android:background="@color/red"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:padding="10dp"
            android:id="@+id/nextBtn1" />
    </RelativeLayout>
</LinearLayout><!-- From: file:/home/kyle/Development/ShutUpAndDrive/app/src/kyle/res/layout/tutorial_autoreply.xml -->